# ============================================
# Cargo Logistics - Environment Variables
# ============================================
# IMPORTANT: Copy this file to .env and change values for production!
# DO NOT commit .env file to git!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=cargo_user
POSTGRES_PASSWORD=cargo_pass
POSTGRES_DB=cargo_db

# Full database URL (used by backend)
DATABASE_URL=postgresql://cargo_user:cargo_pass@postgres:5432/cargo_db

# ============================================
# Security (CHANGE IN PRODUCTION!)
# ============================================
# Generate random secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# Admin panel password
ADMIN_PASSWORD=admin123

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
